{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [{ "name": "project-words", "path": ".cspell/project-words.txt", "addWords": true }],
  "dictionaries": ["project-words"],
  "enableGlobDot": true,
  "ignorePaths": [
    ".direnv",
    ".envrc",
    ".git",
    "__fixtures__",
    "__generated__",
    "__snapshots__",
    "dist",
    "flake.lock",
    "flake.nix",
    "node_modules",
    "pnpm-lock.yaml",
    "tmp"
  ]
}
